FROM python:3.11-slim

# Thiết lập biến môi trường
ENV PYTHONDONTWRITEBYTECODE=1 \
    PYTHONUNBUFFERED=1

# Thiết lập thư mục làm việc trong container
WORKDIR /app

# Cài đặt các thư viện hệ thống cần thiết (đặc biệt cho PostgreSQL adapter)
# libpq-dev: cần thiết cho psycopg2
# gcc: cần thiết để build một số thư viện python
RUN apt-get update && apt-get install -y \
    libpq-dev \
    gcc \
    && rm -rf /var/lib/apt/lists/*

# Copy file requirements trước để tận dụng Docker cache layer
COPY requirements.txt .

# Cài đặt các thư viện Python
RUN pip install --no-cache-dir -r requirements.txt

# Copy toàn bộ mã nguồn vào container
COPY . .

# Tạo một user non-root để chạy ứng dụng (Best Practice về bảo mật)
RUN useradd -m appuser && chown -R appuser /app
USER appuser

# Lệnh mặc định khi container khởi chạy
CMD ["python", "/app/run.py"]